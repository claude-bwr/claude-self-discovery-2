#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run lint
echo "ğŸ“ Running lint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ Lint failed! Fix TypeScript errors before committing."
  exit 1
fi

# Run tests
echo "ğŸ§ª Running tests..."
npm test 2>&1 | tee test-output.tmp
TEST_EXIT_CODE=$?

# Check if it's a platform issue
if grep -q "esbuild for another platform" test-output.tmp; then
  echo "âš ï¸  Tests skipped due to platform mismatch (esbuild issue)"
  echo "ğŸ’¡ This is a known issue in containerized environments"
  rm -f test-output.tmp
else
  rm -f test-output.tmp
  if [ $TEST_EXIT_CODE -ne 0 ]; then
    echo "âŒ Tests failed! Fix failing tests before committing."
    echo "ğŸ’¡ To bypass: git commit --no-verify -m 'your message'"
    exit 1
  fi
fi

# Run lint-staged for formatting
npx lint-staged

echo "âœ… All pre-commit checks passed!"
