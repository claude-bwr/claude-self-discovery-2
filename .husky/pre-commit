#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run lint
echo "📝 Running lint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "❌ Lint failed! Fix TypeScript errors before committing."
  exit 1
fi

# Run lint-staged for formatting
npx lint-staged

echo "✅ Pre-commit checks passed!"
